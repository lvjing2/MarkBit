        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height= "@dimen/hrBorderHeight"
                android:background="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setListHeight"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/textSize"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/brightness"
                    android:layout_gravity="center_vertical"
                    android:gravity="left" />
                <TextView
                    android:id="@+id/brightness_num_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/textSize"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <SeekBar
                    style="@style/Widget.AppCompat.SeekBar"
                    android:id="@+id/brightness_adjust"
                    android:layout_weight="8"
                    android:max="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height= "@dimen/hrBorderHeight"
                android:background="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setListHeight"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/textSize"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/A_show_time"/>
                <TextView
                    android:id="@+id/A_show_time_num_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/textSize"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <SeekBar
                    style="@style/Widget.AppCompat.SeekBar"
                    android:id="@+id/A_show_time"
                    android:max="255"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height= "@dimen/hrBorderHeight"
                android:background="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setListHeight"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/textSize"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/B_show_time"/>
                <TextView
                    android:id="@+id/B_show_time_num_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/textSize"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <SeekBar
                    style="@style/Widget.AppCompat.SeekBar"
                    android:id="@+id/B_show_time"
                    android:max="255"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height= "@dimen/hrBorderHeight"
                android:background="@color/color_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setListHeight"
            android:layout_gravity="center_vertical">

            <TextView
                android:text="@string/battery_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>

            <!--<Switch-->
                <!--android:id="@+id/battery_type"-->
                <!--android:layout_weight="5"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textOn="@string/battery_types_on"-->
                <!--android:textOff="@string/battery_types_off"-->
                <!--android:layout_gravity="center_vertical"/>-->
            <Spinner
                android:id="@+id/battery_type"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height= "@dimen/hrBorderHeight"
                android:background="@color/color_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setListHeight"
            android:layout_gravity="center_vertical">
            <TextView
                android:text="@string/magnetic_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>

            <Switch
                android:id="@+id/magnetic_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height= "@dimen/hrBorderHeight"
                android:background="@color/color_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setListHeight"
            android:layout_gravity="center_vertical">
            <TextView
                android:text="@string/low_voltage_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>

            <Switch
                android:id="@+id/low_voltage_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <View
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height= "@dimen/hrBorderHeight"
                android:background="@color/color_gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setListHeight"
            android:layout_gravity="center_vertical">
            <TextView
                android:text="@string/dump_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>
            <Switch
                android:id="@+id/dump_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>