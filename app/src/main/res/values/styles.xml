<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomPaintroidDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:linksClickable">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/dialog_background_pre_v14_color</item>
    </style>

    <style name="DialogWindowTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">@color/dialog_title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/border_bottom</item>
    </style>

    <style name="DialogButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/tools_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolButton">
        <item name="android:textColor">@color/tools_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/custom_background_color</item>
    </style>

    <!--     <style name="Theme.Transparent" parent="@style/Theme.Sherlock.NoActionBar"> -->
    <!--         <item name="android:windowIsTranslucent">true</item> -->
    <!--         <item name="android:windowBackground">@android:color/transparent</item> -->
    <!--         <item name="android:windowContentOverlay">@null</item> -->
    <!--         <item name="android:windowNoTitle">true</item> -->
    <!--         <item name="android:windowIsFloating">true</item> -->
    <!--         <item name="android:backgroundDimEnabled">true</item> -->
    <!--     </style> -->

    <!-- Theme.Sherlock.ForceOverflow, Theme.Sherlock.Light.ForceOverflow, Theme.Sherlock.Light.DarkActionBar.ForceOverflow -->
    <style name="Theme.PaintroidActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionOverflowButtonStyle">@style/PaintroidOverflowButton</item>
        <item name="android:subtitleTextStyle">@style/PaintroidActionBarTopSubtitleStyle</item>
        <item name="android:actionBarSize">50dip</item>
    </style>

    <style name="PaintroidActionBarTopSubtitleStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/color_chooser_white</item>
    </style>

    <style name="PaintroidActionBarBottomStyle" parent="android:style/Widget.ActionBar">
        <item name="android:background">@color/custom_background_color</item>
    </style>

    <!-- style the overflow drawMenu -->
    <style name="PaintroidPoupupMenuStyle" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/custom_background_color</item>
    </style>
    <!--     style the items within the overflow drawMenu -->
    <style name="PaintroidDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@color/custom_background_color</item>
    </style>

    <!-- style the list navigation -->
    <style name="PaintroidDropDownNav" parent="android:style/Widget.Holo.Spinner">
        <item name="android:background">@color/custom_background_color</item>
        <item name="android:popupBackground">@color/custom_background_color</item>
        <item name="android:dropDownSelector">@color/custom_background_color</item>
    </style>

    <!-- <style name="PaintroidOverflowButton" parent="@style/Widget.Sherlock.ActionButton.Overflow"> -->


    <!-- </style> -->
    <!-- the following can be used to style the overflow drawMenu button -->
    <!-- only do this if you have an *extremely* good reason to!! -->

    <style name="PaintroidOverflowButton" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_menu_overflow</item>
    </style>

</resources>
